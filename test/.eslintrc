extends: ../.eslintrc

globals:
  sinon: true
  expect: true
  after: true
  afterEach: true
  before: true
  beforeEach: true
  it: true
  describe: true

rules:
  no-unused-expressions: [0]

settings:
  import/resolver:
    node:
      moduleDirectory:
        - '../node_modules'
        - '../src'
